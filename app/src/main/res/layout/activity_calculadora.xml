<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"



    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculadora"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adolfo.calculadora_ejercicio11.Calculadora"
    android:theme="@style/Animation.AppCompat.Dialog"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv"
            android:foreground="@android:color/background_light"
            android:background="@android:color/background_light"
            android:elevation="1dp"
            android:fontFamily="sans-serif"
            android:textSize="36sp"
            android:text="0"
            android:textAlignment="viewEnd"
            android:textStyle="normal|bold"
            android:textColor="?android:attr/colorForeground"
            android:layout_height="70dp"
            tools:background="@android:color/background_light" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tvPeque"
            android:text="0"
            android:textAlignment="textEnd"
            android:fontFamily="sans-serif"
            android:textSize="12sp"
            android:background="@android:color/background_light"
            android:layout_height="30dp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="MR"
                android:layout_width="wrap_content"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:layout_height="60dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="leerSigno"
                android:textColor="@color/colorAccent" />

            <Button
                android:text="MS"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/button10"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="leerSigno"
                android:textColor="@color/colorAccent" />

            <Button
                android:text="MC"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/button3"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="leerSigno"
                android:textColor="@color/colorAccent" />

            <Button
                android:text="Borrar"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/button9"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <Button
                android:text="7"
                android:id="@+id/siete"
                android:layout_weight="1"
                android:layout_width="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="pulsado"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="35sp"
                android:layout_height="70dp"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="8"
                android:layout_height="70dp"
                android:id="@+id/ocho"
                android:layout_weight="1"
                android:layout_width="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="pulsado"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="9"
                android:layout_height="70dp"
                android:id="@+id/nueve"
                android:layout_weight="1"
                android:layout_width="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="pulsado"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="X"
                android:layout_height="70dp"
                android:id="@+id/multiplicar"
                android:layout_weight="1"
                android:layout_width="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="leerSigno"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@android:color/holo_orange_dark" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:id="@+id/cuatro"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="pulsado"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="35sp"
                android:layout_height="70dp"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/cinco"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="pulsado"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/seis"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="pulsado"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/restar"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="leerSigno"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@android:color/holo_orange_dark" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:id="@+id/uno"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="pulsado"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="35sp"
                android:layout_height="70dp"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/dos"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="pulsado"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/tres"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="pulsado"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:id="@+id/sumar"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="70dp"
                android:onClick="leerSigno"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@android:color/holo_orange_dark" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text=","
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/button7"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textSize="30sp"
                android:onClick="leerSigno"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:id="@+id/cero"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="pulsado"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="="
                android:layout_width="wrap_content"
                android:id="@+id/igual"
                android:layout_weight="1"
                android:layout_height="70dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="leerSigno"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@android:color/holo_orange_dark" />

            <Button
                android:text="/"
                android:layout_width="wrap_content"
                android:id="@+id/dividir"
                android:layout_weight="1"
                android:layout_height="70dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="leerSigno"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@android:color/holo_orange_dark" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="CE"
                android:layout_width="wrap_content"
                android:id="@+id/button8"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textStyle="normal|bold"
                android:textSize="30sp"
                android:layout_height="60dp"
                android:textColor="@color/colorPrimary" />

            <Button
                android:text="C"
                android:layout_width="wrap_content"
                android:id="@+id/c"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="pulsado"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:textColor="@android:color/holo_red_dark" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
